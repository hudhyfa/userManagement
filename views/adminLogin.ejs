<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Login page</title>
  </head>
  <body>
    <!-- nav -->
    <nav class="navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
              <i class="fa-solid fa-bank"></i>
              Bank App
            </a>
        </div>
      </nav>
    <!-- login body -->
    <div class="container">
        <div class="row d-flex justify-content-space-evenly">
            <div class="col-6 me-3" style="display: flex;flex-direction: row;justify-content: center;align-items: center;margin-top:70px;" >
                <img width="100%" height="100%" src="https://cdn.dribbble.com/users/76502/screenshots/5251755/jet_animation.gif" alt="">
            </div>
            <div class="col-5 text-center mt-5" >
                <h2 class="text-center text-primary">Admin</h2>
                <form  method="post" class="border rounded shadow p-5 mt-5">
                    <div class="form-floating mb-3">
                        <input type="text" name="adminName" class="form-control" id="floatingInput" placeholder="adminName">
                        <div class="text-danger" ><%= emptyName||wrongName %></div>
                        <label for="floatingInput">Name</label>
                      </div>
                      <div class="form-floating">
                        <input type="password" name="adminPassword" formControlName="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <div class="text-danger" ><%= wrongPass||emptyPass %></div>
                        <label for="floatingPassword">Password</label>
                      </div>
                      <!-- <div class="text-danger mt-2">{{errMsg}}</div> -->
                      <div class="d-grid mt-4">
                        <button class="btn btn-primary" type="submit" >   
                          <span>Sign in</span></button>
                      </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
