<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Login page</title>
  </head>
  <body>
    <!-- nav -->
    <nav class="navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
              <i class="fa-solid fa-bank"></i>
              Bank App
            </a>
        </div>
      </nav>
    <!-- login body -->
    <div class="container">
        <div class="row d-flex justify-content-space-evenly">
            <div class="col-6">
                <img width="100%" src="https://img.freepik.com/free-vector/mobile-login-concept-illustration_114360-83.jpg?w=2000" alt="">
            </div>
            <div class="col-5 text-center mt-5" >
                <h2 class="text-center text-primary">Login here</h2>
                <form method="post" class="border rounded shadow p-5 mt-5">
                    <div class="form-floating mb-3">
                        <input type="text" name="username" class="form-control" id="floatingInput" placeholder="Username">
                        <div class="text-danger" ><%= errUsername||empty %></div>
                        
                        <!-- <div class="text-danger" ></div> -->
                        <label for="floatingInput">Account holder</label>
                      </div>
                      <div class="form-floating">
                        <input type="password" name="password" formControlName="password" class="form-control" id="floatingPassword" placeholder="Password">
                        <div class="text-danger" ><%= errPassword %></div>
                        <label for="floatingPassword">Password</label>
                      </div>
                      <div class="d-grid mt-4">
                        <button class="btn btn-primary" type="submit" >   
                          <span>Sign in</span></button>
                      </div>
                    </form>
                    <form action="/signup">
                      <div class="text-center mt-2">
                        <button class="btn btn-outline-primary" type="submit">New here? Please Sign up</button>
                      </div>
                    </form>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
